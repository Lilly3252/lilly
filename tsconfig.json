{
	"compilerOptions": {
		"emitDecoratorMetadata": true,
		"module": "NodeNext",
		"moduleResolution": "Node16",
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"rootDir": "src",
		"outDir": "dist",
		"baseUrl": "./",
		"paths": {
			"#utils/*": ["./src/utils/*"],
			"#slashyInformations/*": ["./src/slashyInformations/*"],
			"#types/*": ["src/utils/types/*"],
			"#database/*": ["./src/database/*"]
		},
		"skipLibCheck": true
	},
	"include": ["src"]
}
